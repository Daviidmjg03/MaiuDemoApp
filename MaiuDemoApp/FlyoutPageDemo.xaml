<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaiuDemoApp.FlyoutPageDemo"
            FlyoutLayoutBehavior="Popover"
             Title="FlyoutPageDemo">

    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout submenu" BackgroundColor="Aqua">
            <Label Text="SubMenu" 
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="Flyout submenu" BackgroundColor="Yellow">
            <Label Text="SubMenu" 
            FontSize="Large"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"/>
        </ContentPage>
    </FlyoutPage.Detail>
    
</FlyoutPage>